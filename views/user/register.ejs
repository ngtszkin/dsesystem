<form action="/user/register" method="POST">



    <div class="container">
    <div class="form-group">
        <label>How to call you?</label>
        <input type="text" class="form-control" name="User[nickname]" required>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="User[email]" required>
    </div>

    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="User[username]" required>
    </div>
    
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" name="User[password]" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <p></p>
</form>